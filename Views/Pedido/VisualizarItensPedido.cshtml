@{
    //ViewBag.Title = "About";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>



<br />

<table class="table table-bordered table-hover table-responsive">
    <tr>
        <th>Nome do Produto</th>
        <th>Quantidade no carrinho</th>
        <th>Valor da unidade</th>
        <th>Valor total do produto</th>
    </tr>

    @foreach (var item in ViewBag.Carrinho.ListaProdutos)
    {
        <tr>
            <td>@item.NomeProduto</td>
            <td>@item.Quantidade</td>
            <td>@item.ValorUnitario</td>
            <td>@item.ValorTotalProduto</td>
            @*<td><a href="/Carrinho/AumentarQuantidadeProduto/@item.IdProduto">+1</a></td>
            <td><a href="/Carrinho/DiminuirQuantidadeProduto/@item.IdProduto">-1</a></td>
            <td><a href="/Carrinho/RemoverProdutoCarrinho/@item.IdProduto">Remover do carrinho</a></td>*@
        </tr>

    }
</table>

<p>Valor total do carrinho: R$ @ViewBag.Carrinho.ValorTotalCarrinho</p>
